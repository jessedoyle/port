.row
  .large-12.columns
    %h2 Sign In

= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .row
    .large-12.columns
      .row.collapse.prefix-radius
        .small-3.columns
          %span.prefix Email
        .small-9.columns
          = f.email_field :email, autofocus: true, placeholder: 'Email Address'
    .large-12.columns
      .row.collapse.prefix-radius
        .small-3.columns
          %span.prefix Password
        .small-9.columns
          = f.password_field :password, autocomplete: 'off', placeholder: 'Password'
    .large-12.columns
      = f.submit 'Log In', class: 'button expand'

= render 'devise/shared/links'