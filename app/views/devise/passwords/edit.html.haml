.row
  .large-12.columns
    %h2 Change Password

= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
  .row
    .large-12.columns
      = devise_error_messages!
      = f.hidden_field :reset_password_token
  .row
    .large-12.columns
      .row.collapse.prefix-radius
        .small-3.columns
          %span.prefix New Password
        .small-9.columns
          = f.password_field :password, autofocus: true, placeholder: 'New Password', autocomplete: 'off'
    .large-12.columns
      .row.collapse.prefix-radius
        .small-3.columns
          %span.prefix Confirm Password
        .small-9.columns
          = f.password_field :password_confirmation, placeholder: 'Confirm Password', autocomplete: 'off'
    .large-12.columns
      = f.submit 'Change Password', class: 'button expand flat'